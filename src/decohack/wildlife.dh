thing 280 "Rat"
{
    //$category VFX/Wildlife
    ednum 222

    +NOBLOCKMAP

    States
    {
        Spawn:
            RATS A 5 A_Look
            Loop
        See:
            RATS AAAAAA 3 A_JumpIfTargetCloser(Turn, 256.0)
            RATS A 3 {
                A_JumpIfTargetCloser(Turn, 256.0)
                A_RandomJump(Squeak, 63)
            }
            Loop
        Squeak:
            RATS EA 8 A_JumpIfTargetCloser(Turn, 256.0)
            RATS E 8 {
                A_JumpIfTargetCloser(Turn, 256.0)
                A_RandomJump(Squeak, 63)
            }
            Goto See
        Turn:
            RATS B 1 A_RandomJump(Alert, 63)
            TNT1 A 0 A_Turn(45)
            TNT1 A 0 A_RandomJump(Alert, 63)
            TNT1 A 0 A_Turn(45)
            TNT1 A 0 A_RandomJump(Alert, 63)
            TNT1 A 0 A_Turn(45)
            TNT1 A 0 A_RandomJump(Alert, 63)
            TNT1 A 0 A_Turn(45)
            TNT1 A 0 A_RandomJump(Alert, 63)
            TNT1 A 0 A_Turn(45)
            TNT1 A 0 A_RandomJump(Alert, 63)
            TNT1 A 0 A_Turn(45)
            TNT1 A 0 A_RandomJump(Alert, 63)
            TNT1 A 0 A_Turn(45)
            Goto Alert
        Alert:
            TNT1 A 1 {
                A_SpawnObject(281, 0.0, 0.0, 0.0, 0.0, 16.0, 0.0, 0.0)
                A_PlaySound("FRE037")
            }
            Stop
    }
}

