thing 282 "Frog in water"
{
    //$category VFX/Wildlife
    ednum 223

    +NOBLOCKMAP

    States
    {
        Spawn:
            FRGA ABC 8 A_Look
            Loop
        See:
            FRGA ABC 8 A_JumpIfTargetCloser(Submerge, 256.0)
            Loop
        Submerge:
            FRGA D 2 A_PlaySound("FRE038")
            FRGA EF 2
            FRGA GHI 4
            Goto Underwater
        Underwater:
            TNT1 A 70 A_RandomJump(Resurface, 64)
            Loop
        Resurface:
            FRGA F 6 {
                A_JumpIfTargetCloser(Underwater, 256.0)
                A_PlaySound("FRE039")
            }
            FRGA ED 6
            Goto See
    }
}